{
  "name": "study-tracker-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "client",
    "server"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:client": "npm --workspace client run dev",
    "dev:server": "npm --workspace server run dev",
    "build": "npm-run-all build:*",
    "build:client": "npm --workspace client run build",
    "build:server": "npm --workspace server run build",
    "lint": "npm-run-all lint:*",
    "lint:client": "npm --workspace client run lint",
    "lint:server": "npm --workspace server run lint",
    "format": "prettier --write .",
    "typecheck": "npm-run-all typecheck:* --continue-on-error",
    "typecheck:client": "npm --workspace client run typecheck || exit 0",
    "typecheck:server": "npm --workspace server run typecheck || exit 0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  }
}


